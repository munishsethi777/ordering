@model MVCDataModel.LookupParam
@if (Model == null)
{
    <!-- Lookup control -->
    <script src="../../Scripts/lookup.js" type="text/javascript"></script>
    <script src="../../Scripts/jquery.mcautocomplete.js" type="text/javascript"></script>
}
else
{
    <!-- 
    arg 1 - id
    arg 2 - place holder
    arg 3 - class
    arg 4 - mandatory
    arg 5 - value  - display text (text field)
    arg 6 - text - hidden value (value field)
     -->
    <div class="input-append">
        <input id="@Model.Name" name="@Model.Name" islookup="true" value="@Model.Text" text="@Model.Value" placeholder="@Model.PlaceHolder" class="@Model.CssClass" data-val="@Model.IsRequired" data-val-required="This field is required" type="text" >
        <button title="Search Lookup" islookup="true" lookupid="@Model.Name" class="btn drodpown-toggle" data-toggle="dropdown">
            <span class="icon-search"></span>
        </button>
        <div class="btn-group">
            <button title="Lookup Task" onclick="LoadLookup('@Model.Name');" class="btn drodpown-toggle" data-toggle="dropdown">
                <i class="icon-th-list"></i>
            </button>
            <ul class="dropdown-menu">
                <li><a href="#" onclick="SelectAll('@Model.Name');">All</a></li>
                <li><a href="#" onclick="ClearLookup('@Model.Name');">Clear</a></li>
            </ul>
        </div>
        <!-- /btn-group -->
    </div>
}